{
  "dataset_reader": {
    "class_name": "huggingface_nlp_reader",
    "path": "glue",
    "name": "mrpc",
    "train": "train",
    "valid": "validation",
    "test": "test"
  },
  "dataset_iterator": {
    "class_name": "huggingface_nlp_iterator",
    "features": ["sentence1", "sentence2"],
    "label": "label",
    "seed": 42
  },
  "chainer": {
    "in": [
      "sentence1", "sentence2"
    ],
    "in_y": [
      "y"
    ],
    "pipe": [
      {
        "id": "preprocessor",
        "class_name": "torch_bert_preprocessor",
        "vocab_file": "bert-base-cased",
        "do_lower_case": false,
        "max_seq_length": 100,
        "in": [
          "sentence1", "sentence2"
        ],
        "out": [
          "bert_features"
        ]
      },
      {
        "id": "mem_preprocessor",
        "class_name": "torch_mem_tokens_preprocessor",
        "tokenizer": "#preprocessor.tokenizer",
        "mem_size": 20,
        "mem_tokens_unique": true,
        "in": ["bert_features"],
        "out": ["bert_mem_features"]
      },
      {
        "id": "classes_vocab",
        "class_name": "simple_vocab",
        "fit_on": [
          "y"
        ],
        "save_path": "{MODEL_PATH}/classes.dict",
        "load_path": "{MODEL_PATH}/classes.dict",
        "in": [
          "y"
        ],
        "out": [
          "y_ids"
        ]
      },
      {
        "in": [
          "y_ids"
        ],
        "out": [
          "y_onehot"
        ],
        "class_name": "one_hotter",
        "depth": "#classes_vocab.len",
        "single_vector": true
      },
      {
        "class_name": "torch_bert_classifier",
        "n_classes": "#classes_vocab.len",
        "vocab_size": "#mem_preprocessor.__len__()",
        "return_probas": true,
        "pretrained_bert": "bert-base-cased",
        "save_path": "{MODEL_PATH}/model",
        "load_path": "{MODEL_PATH}/model",
        "optimizer": "AdamW",
        "optimizer_parameters": {
          "lr": 2e-05
        },
        "learning_rate_drop_patience": 3,
        "learning_rate_drop_div": 2.0,
        "in": [
          "bert_mem_features"
        ],
        "in_y": [
          "y_ids"
        ],
        "out": [
          "y_pred_probas"
        ]
      },
      {
        "in": [
          "y_pred_probas"
        ],
        "out": [
          "y_pred_ids"
        ],
        "class_name": "proba2labels",
        "max_proba": true
      },
      {
        "in": [
          "y_pred_ids"
        ],
        "out": [
          "y_pred_labels"
        ],
        "ref": "classes_vocab"
      }
    ],
    "out": [
      "y_pred_labels"
    ]
  },
  "train": {
    "batch_size": 100,
    "metrics": [
      {
        "name": "f1",
        "inputs": [
          "y_ids",
          "y_pred_ids"
        ]
      },
      "accuracy"
    ],
    "validation_patience": 10,
    "val_every_n_epochs": 1,
    "log_every_n_epochs": 1,
    "show_examples": false,
    "test_best": false,
    "validate_best": true,
    "evaluation_targets": [
      "train",
      "valid"
    ],
    "class_name": "torch_trainer",
    "tensorboard_log_dir": "{MODEL_PATH}/"
  },
  "metadata": {
    "variables": {
      "ROOT_PATH": "~/.deeppavlov",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "MODELS_PATH": "{ROOT_PATH}/models",
      "MODEL_PATH": "{MODELS_PATH}/classifiers/glue_mrpc_torch_cased_bert_mem"
    },
    "requirements": [
      "{DEEPPAVLOV_PATH}/requirements/pytorch.txt",
      "{DEEPPAVLOV_PATH}/requirements/transformers.txt"
    ],
    "download": [
      {
        "url": "http://files.deeppavlov.ai/datasets/insults_data.tar.gz",
        "subdir": "{DOWNLOADS_PATH}"
      }
    ]
  }
}
